{
  "compilerOptions": {
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleDetection": "force",

    "strict": true,
    "strictNullChecks": false,

    "module": "commonjs",
    "outDir": "lib",

    "lib": ["es6","dom"],
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*.ts", "../jest.config.ts"],
}
